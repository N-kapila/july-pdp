{% schema %}
{
  "name": "Product Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Details youâ€™ll love."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "feature_image",
          "label": "Feature Image"
        },
        {
          "type": "url",
          "id": "feature_video",
          "label": "Optional Video URL (MP4 from Files)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Feature Description",
          "default": "Feature description goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Features",
      "category": "Product"
    }
  ]
}
{% endschema %}

<section class="product-features">
  <div class="page-width">
    <h2 class="product-features__heading">{{ section.settings.heading }}</h2>
    <div class="product-features__grid">
      {% for block in section.blocks %}
        <div class="product-feature">
          
          {% if block.settings.feature_video != blank %}
            <video autoplay muted loop playsinline>
              <source src="{{ block.settings.feature_video }}" type="video/mp4">
            </video>
          {% elsif block.settings.feature_image != blank %}
            <img
              src="{{ block.settings.feature_image | image_url: width: 800 }}"
              alt="{{ block.settings.title | escape }}"
              width="{{ block.settings.feature_image.width }}"
              height="{{ block.settings.feature_image.height }}"
              loading="lazy">
          {% endif %}

          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
